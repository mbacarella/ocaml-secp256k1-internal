(jbuild_version 1)

(library
 ((name            secp256k1_ml)
  (public_name     secp256k1)
  (modules         (internal external))
  (libraries       (bigarray cstruct))
  (c_names         (secp256k1
                    secp256k1_wrap))
  (c_flags         (:include c_flags.sexp))
  (c_library_flags (-lgmp))))

(rule
 ((targets (c_flags.sexp))
  (deps    (../config/discover.exe))
  (action  (run ${<} -ocamlc ${OCAMLC}))))
